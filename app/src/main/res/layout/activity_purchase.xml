<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enregistrer un achat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produit"
            android:paddingTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerProductPurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QuantitÃ©"
            android:paddingTop="12dp"/>

        <EditText
            android:id="@+id/editPurchaseQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 100"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prix d'achat unitaire"
            android:paddingTop="12dp"/>

        <EditText
            android:id="@+id/editPurchasePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 25.50"
            android:inputType="numberDecimal"/>

        <TextView
            android:id="@+id/textMarginInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marge: calculÃ©e automatiquement"
            android:paddingTop="8dp"
            android:textSize="12sp"
            android:textColor="#666666"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prix de vente unitaire (modifiable)"
            android:paddingTop="12dp"/>

        <EditText
            android:id="@+id/editSellingPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CalculÃ© automatiquement"
            android:inputType="numberDecimal"
            android:textColor="#1976D2"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Le prix de vente est calculÃ© automatiquement selon la marge du produit, mais vous pouvez le modifier."
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:textSize="11sp"
            android:textColor="#666666"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fournisseur"
            android:paddingTop="12dp"/>

        <EditText
            android:id="@+id/editSupplierName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom du fournisseur"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NumÃ©ro de lot"
            android:paddingTop="12dp"/>

        <EditText
            android:id="@+id/editBatchNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: LOT2024001"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date d'expiration (optionnel)"
            android:paddingTop="12dp"/>

        <EditText
            android:id="@+id/editExpiryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dd/MM/yyyy"
            android:inputType="date"/>

        <Button
            android:id="@+id/btnSavePurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enregistrer l'achat"
            android:layout_marginTop="24dp"/>

    </LinearLayout>

</ScrollView>
