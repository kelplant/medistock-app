<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labelRecordPurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Record a Purchase"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/labelSitePurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Site"
            android:paddingTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerSitePurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>

        <TextView
            android:id="@+id/labelProductPurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product"
            android:paddingTop="12dp"/>

        <Spinner
            android:id="@+id/spinnerProductPurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>

        <TextView
            android:id="@+id/labelQuantityPurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:paddingTop="12dp"/>

        <EditText
            android:id="@+id/editPurchaseQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 100"
            android:inputType="numberDecimal"/>

        <TextView
            android:id="@+id/labelPurchasePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unit Purchase Price"
            android:paddingTop="12dp"/>

        <EditText
            android:id="@+id/editPurchasePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 25.50"
            android:inputType="numberDecimal"/>

        <TextView
            android:id="@+id/textMarginInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Margin: calculated automatically"
            android:paddingTop="8dp"
            android:textSize="12sp"
            android:textColor="#666666"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/labelSellingPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unit Selling Price (editable)"
            android:paddingTop="12dp"/>

        <EditText
            android:id="@+id/editSellingPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Calculated automatically"
            android:inputType="numberDecimal"
            android:textColor="#1976D2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textSellingPriceNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The selling price is calculated automatically based on the product's margin, but you can modify it."
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:textSize="11sp"
            android:textColor="#666666"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/labelSupplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supplier"
            android:paddingTop="12dp"/>

        <Spinner
            android:id="@+id/spinnerSupplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>

        <TextView
            android:id="@+id/labelSupplierOrEnter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="or enter manually:"
            android:paddingTop="4dp"
            android:textSize="12sp"
            android:textColor="#666666"/>

        <EditText
            android:id="@+id/editSupplierName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Supplier name"
            android:inputType="text"/>

        <TextView
            android:id="@+id/labelBatchNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Batch Number"
            android:paddingTop="12dp"/>

        <EditText
            android:id="@+id/editBatchNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: LOT2024001"
            android:inputType="text"/>

        <TextView
            android:id="@+id/labelExpiryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expiry Date (optional)"
            android:paddingTop="12dp"/>

        <EditText
            android:id="@+id/editExpiryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dd/MM/yyyy"
            android:inputType="date"/>

        <Button
            android:id="@+id/btnSavePurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Purchase"
            android:layout_marginTop="24dp"/>

    </LinearLayout>

</ScrollView>
