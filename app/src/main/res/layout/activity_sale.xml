<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enregistrer une vente"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produit"
            android:paddingTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QuantitÃ©"
            android:paddingTop="12dp"/>

        <EditText
            android:id="@+id/editSaleQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 10"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prix de vente unitaire (modifiable)"
            android:paddingTop="12dp"/>

        <EditText
            android:id="@+id/editSalePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prix de vente"
            android:inputType="numberDecimal"
            android:textColor="#1976D2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textSalePriceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Le prix sera prÃ©-rempli selon le dernier prix de vente"
            android:paddingTop="4dp"
            android:textSize="12sp"
            android:textColor="#666666"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Client / Agriculteur"
            android:paddingTop="12dp"/>

        <EditText
            android:id="@+id/editFarmerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom du client"
            android:inputType="text"/>

        <Button
            android:id="@+id/btnSaveSale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enregistrer la vente"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="match_parent"
