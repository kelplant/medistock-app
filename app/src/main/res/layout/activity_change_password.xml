<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/labelCurrentPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Password"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editCurrentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter current password"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/labelNewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new password"
            android:inputType="textPassword"
            android:layout_marginBottom="8dp"/>

        <!-- Password Strength Indicator -->
        <LinearLayout
            android:id="@+id/passwordStrengthContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/labelPasswordStrength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password strength:"
                    android:textSize="12sp"
                    android:textColor="?android:textColorSecondary"/>

                <TextView
                    android:id="@+id/textPasswordStrength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="Strong"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressPasswordStrength"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/password_strength_progress"/>

        </LinearLayout>

        <!-- Password Requirements Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPasswordRequirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?android:colorBackground"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/labelPasswordRequirements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password requirements:"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp"/>

                <!-- Requirement: Min Length -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:id="@+id/iconReqLength"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_circle_outline"
                        android:tint="?android:textColorSecondary"/>

                    <TextView
                        android:id="@+id/textReqLength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="At least 8 characters"
                        android:textSize="12sp"
                        android:textColor="?android:textColorSecondary"/>

                </LinearLayout>

                <!-- Requirement: Uppercase -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:id="@+id/iconReqUppercase"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_circle_outline"
                        android:tint="?android:textColorSecondary"/>

                    <TextView
                        android:id="@+id/textReqUppercase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="At least one uppercase letter (A-Z)"
                        android:textSize="12sp"
                        android:textColor="?android:textColorSecondary"/>

                </LinearLayout>

                <!-- Requirement: Lowercase -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:id="@+id/iconReqLowercase"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_circle_outline"
                        android:tint="?android:textColorSecondary"/>

                    <TextView
                        android:id="@+id/textReqLowercase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="At least one lowercase letter (a-z)"
                        android:textSize="12sp"
                        android:textColor="?android:textColorSecondary"/>

                </LinearLayout>

                <!-- Requirement: Digit -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:id="@+id/iconReqDigit"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_circle_outline"
                        android:tint="?android:textColorSecondary"/>

                    <TextView
                        android:id="@+id/textReqDigit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="At least one digit (0-9)"
                        android:textSize="12sp"
                        android:textColor="?android:textColorSecondary"/>

                </LinearLayout>

                <!-- Requirement: Special -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iconReqSpecial"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_circle_outline"
                        android:tint="?android:textColorSecondary"/>

                    <TextView
                        android:id="@+id/textReqSpecial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="At least one special character (!@#$%...)"
                        android:textSize="12sp"
                        android:textColor="?android:textColorSecondary"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/labelConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm New Password"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm new password"
            android:inputType="textPassword"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSavePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>
