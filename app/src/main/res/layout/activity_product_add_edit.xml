<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nom du produit -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/product_name_hint"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp" />

        <!-- CatÃ©gorie -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Type de conditionnement -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type de conditionnement"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Volume/QuantitÃ© par unitÃ© -->
        <TextView
            android:id="@+id/textUnitVolumeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume par flacon (ml)"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editUnitVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Ex: 100"
            android:layout_marginBottom="16dp" />

        <!-- Type de marge -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/margin_type"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerMarginType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Valeur de la marge -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/margin_value"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editMarginValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/margin_value_hint"
            android:layout_marginBottom="16dp" />

        <!-- Info sur le calcul de la marge -->
        <TextView
            android:id="@+id/textMarginInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuration de la marge"
            android:textSize="14sp"
            android:textColor="#1976D2"
            android:textStyle="italic"
            android:padding="12dp"
            android:background="#E3F2FD"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Le prix de vente sera calculÃ© automatiquement lors de chaque achat en appliquant cette marge au prix d'achat."
            android:textSize="12sp"
            android:textColor="#666666"
            android:textStyle="italic"
            android:layout_marginBottom="24dp" />

        <!-- Bouton enregistrer -->
        <Button
            android:id="@+id/btnSaveProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_product" />

        <!-- Bouton supprimer (visible uniquement en mode Ã©dition) -->
        <Button
            android:id="@+id/btnDeleteProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supprimer"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>
